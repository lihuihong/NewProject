<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_bg"
    tools:context="com.example.mrz.newproject.controller.activity.LoginActivity"
    android:fitsSystemWindows="true">


    <TextView
        android:shadowColor="#a7000000"
        android:shadowRadius="6"
        android:shadowDx="2"
        android:shadowDy="2"
        android:paddingTop="100dp"
        android:text="重电查询系统"
        android:textColor="@color/white"
        android:textSize="33sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/login_username"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:hint="学号"
            android:textSize="15sp"
            android:textColorHint="#cadee7"
            android:textColor="#cadee7"
            android:background="@drawable/login_input_et_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/login_password"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:hint="密码"
            android:textSize="15sp"
            android:textColor="#cadee7"
            android:textColorHint="#cadee7"
            android:inputType="textPassword"
            android:background="@drawable/login_input_et_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/login_pb"
            android:background="@drawable/login_botton_bg"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar

                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>

        <LinearLayout
            android:transitionName="sharedView"
            android:id="@+id/ll_login_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/login_post"
                android:textSize="20sp"
                android:text="立即登录"
                android:background="@drawable/login_botton_bg"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView
            android:id="@+id/login_help"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#cadee7"
            android:text="如何登录？| 登录帮助"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#a5000000"
            android:shadowRadius="6"
            android:shadowDx="2"
            android:shadowDy="2"
            />

    </LinearLayout>




</RelativeLayout>
