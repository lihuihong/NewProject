<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mrz.newproject.controller.activity.ScoreQueryActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="2dp">

        <Spinner
            android:layout_weight="1"
            android:id="@+id/score_year_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/years" />


        <Spinner
            android:layout_weight="1"
            android:id="@+id/score_term_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/terms"
            />

        <Button
            android:layout_weight="1"
            android:id="@+id/score_btn_year"
            android:text="学年"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/score_btn_terms"
            android:layout_weight="1"
            android:text="学期"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/score_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
